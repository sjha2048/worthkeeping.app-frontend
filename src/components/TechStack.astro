---
const techStack = [
  { name: "WXT", color: "primary" },
  { name: "Manifest V3", color: "accent" },
  { name: "SolidJS", color: "primary" },
  { name: "TypeScript", color: "primary" },
  { name: "Dexie.js", color: "accent" },
  { name: "IndexedDB", color: "primary" },
  { name: "Transformers.js", color: "accent" },
  { name: "Vercel AI SDK", color: "primary" },
  { name: "Tailwind CSS", color: "accent" }
];
---

<div class="flex flex-wrap justify-center gap-3">
  {techStack.map((tech) => (
    <span
      class:list={[
        "inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-medium transition-all hover:scale-105",
        tech.color === "primary"
          ? "bg-primary/10 text-primary border border-primary/20 hover:bg-primary/20"
          : "bg-accent/10 text-accent border border-accent/20 hover:bg-accent/20"
      ]}
    >
      <span class:list={[
        "w-2 h-2 rounded-full",
        tech.color === "primary" ? "bg-primary" : "bg-accent"
      ]}></span>
      {tech.name}
    </span>
  ))}
</div>
