<section id="features" class="section-padding bg-surface dark:bg-surface-dark">
  <div class="container-main">
    <div class="text-center mb-16">
      <h2 class="heading-lg text-text dark:text-text-dark mb-4">
        Everything you need,
        <span class="gradient-text">nothing you don't</span>
      </h2>
      <p class="text-lg text-text-muted dark:text-text-muted-dark max-w-2xl mx-auto">
        Built for busy professionals who want to capture accomplishments without disrupting their workflow.
      </p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {features.map((feature, index) => (
        <div
          class="card group"
          style={`animation-delay: ${index * 100}ms`}
        >
          <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors">
            <svg
              class="w-6 h-6 text-primary"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
              set:html={feature.icon}
            />
          </div>
          <h3 class="text-lg font-semibold text-text dark:text-text-dark mb-2">
            {feature.title}
          </h3>
          <p class="text-text-muted dark:text-text-muted-dark">
            {feature.description}
          </p>
        </div>
      ))}
    </div>
  </div>
